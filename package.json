{
  "name": "@enea-scaccabarozi/tradekits",
  "version": "0.0.0",
  "description": "A small library to interact with some cryptocurrency exchanges in a way that is convenient for my projects.",
  "main": "./lib/index.js",
  "type": "module",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf ./lib/",
    "cm": "cz",
    "lint": "eslint ./src/ --fix",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "test:watch": "vitest --watch",
    "test": "vitest --coverage --project=unit",
    "test:e2e": "vitest --project=e2e",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enea-scaccabarozzi/tradekits.git"
  },
  "license": "MIT",
  "author": {
    "name": "Enea Scaccabarozzi",
    "email": "me@eneascaccabarozzi.xyz",
    "url": "https://eneascaccabarozzi.xyz"
  },
  "engines": {
    "node": ">=12.0"
  },
  "keywords": [
    "cryptocurrency",
    "exchange",
    "api",
    "ccxt",
    "bybit"
  ],
  "bugs": {
    "url": "https://github.com/enea-scaccabarozzi/tradekits/issues"
  },
  "homepage": "https://github.com/enea-scaccabarozzi/tradekits#readme",
  "devDependencies": {
    "@ryansonshine/commitizen": "^4.2.8",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@types/node": "^20.12.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@vitest/coverage-v8": "^1.5.3",
    "@vitest/ui": "^1.6.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.2.1",
    "semantic-release": "^21.0.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.2.4",
    "vitest": "^1.5.3",
    "vitest-mock-extended": "^1.3.1",
    "zod": "^3.23.8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "axios": "^1.6.8",
    "bybit-api": "^3.10.3",
    "ccxt": "^4.3.24",
    "dotenv": "^16.4.5",
    "neverthrow": "^6.2.1",
    "websocket-ts": "^2.1.5",
    "ws": "^8.17.0"
  }
}
